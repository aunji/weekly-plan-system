rules_version = '2';

// Firebase Storage Security Rules for Weekly Plan System
// Allow users to upload profile pictures with size and type validation
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures: users/{userId}/profile.{ext}
    match /users/{userId}/profile.{ext} {
      // Allow read if authenticated
      allow read: if request.auth != null;

      // Allow write only if:
      // 1. User is authenticated
      // 2. User is uploading their own profile picture
      // 3. File is an image (jpeg, jpg, png, gif, webp)
      // 4. File size is less than 5MB
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.contentType.matches('image/(jpeg|jpg|png|gif|webp)')
                   && request.resource.size < 5 * 1024 * 1024;
    }
  }
}
